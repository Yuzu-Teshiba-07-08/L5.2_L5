<h1>アイテム</h1>
<% product=Product.find(params[:product_id])%>

<%= product.name %>
<%= product.price %>
<%= form_for  @cartitem, url: {action: :create} do |f|  %>
    <p>
    <%= f.hidden_field :product_id, :value => params[:product_id] %>
    <%= f.label :qty, '個数'%>
    <%= f.number_field :qty %>
    </p>
   <%= f.submit '登録' %> 
<% end%>    
   
