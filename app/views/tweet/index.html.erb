<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @tweets.each do |e| %>
    <p>
        <li>
        <%= e.message %>
        <%= ((Time.current - e.tdate)/60).to_i %>分
        <%=link_to '削除', tweet_path(e), data: { turbo_method: :delete } %>
        <%=link_to '表示', tweet_path(e) %>
        <%=link_to '編集', edit_tweet_path(e) %>
        <%= link_to 'いいね', likes_path(tweet_id: e.id), method: :post %>
        <%= link_to 'いいね削除', like_path(e), method: :delete %>
       
        </li>
    </p>
<% end %>
<div class="box"><%= link_to 'ツイートする', new_tweet_path %></div>